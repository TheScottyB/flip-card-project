{
  "name": "flip-card-project",
  "version": "1.0.0",
  "description": "Accessible flip card implementation with WCAG compliance",
  "main": "dist/js/flip-card.min.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "jest",
    "test:a11y": "jest src/tests/accessibility.test.js",
    "test:report": "jest src/tests/accessibility.test.js --reporters=default --reporters=jest-html-reporter",
    "test:ci": "jest --ci --collectCoverage --reporters=default --reporters=jest-html-reporter",
    "build": "cp src/styles/flip-card.css dist/css/ && cp src/js/flip-card.js dist/js/",
    "minify:css": "postcss dist/css/flip-card.css -o dist/css/flip-card.min.css --use autoprefixer cssnano",
    "minify:js": "terser src/js/flip-card.js -o dist/js/flip-card.min.js",
    "minify": "npm run minify:css && npm run minify:js",
    "build:prod": "npm run build && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheScottyB/flip-card-project.git"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "flip-card",
    "interactive"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/TheScottyB/flip-card-project/issues"
  },
  "homepage": "https://github.com/TheScottyB/flip-card-project#readme",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.1",
    "@axe-core/puppeteer": "^4.10.1",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "autoprefixer": "^10.4.17",
    "cssnano": "^6.0.2",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.0",
    "postcss": "^8.4.35",
    "postcss-cli": "^10.1.0",
    "puppeteer": "^24.6.0",
    "tailwindcss": "^3.4.1",
    "terser": "^5.26.0"
  }
}
